{
  "name": "alex/department-management",
  "description": "Web application for department hierarchy management",
  "type": "project",
  "require": {
    "php": "^8.3",
    "firebase/php-jwt": "^6.8",
    "symfony/routing": "^6.0",
    "symfony/http-foundation": "^6.0",
    "symfony/dependency-injection": "^6.0",
    "symfony/config": "^6.0",
    "symfony/yaml": "^6.0",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t html/public",
    "test": "vendor/bin/phpunit --configuration phpunit.xml"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  }
}

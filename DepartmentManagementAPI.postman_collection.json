{
  "info": {
    "name": "Department Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"your_username\",\n    \"password\": \"your_password\"\n}"
            },
            "url": {
              "raw": "http://localhost/login",
              "protocol": "http",
              "host": ["localhost"],
              "path": ["login"]
            }
          }
        }
      ]
    },
    {
      "name": "Departments",
      "item": [
        {
          "name": "Create Department",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"IT Department\",\n    \"parent_id\": 1,\n    \"flags\": 1\n}"
            },
            "url": {
              "raw": "http://localhost/departments",
              "protocol": "http",
              "host": ["localhost"],
              "path": ["departments"]
            }
          }
        },
        {
          "name": "Get Department",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost/departments/1",
              "protocol": "http",
              "host": ["localhost"],
              "path": ["departments", "1"]
            }
          }
        },
        {
          "name": "Update Department",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"Updated IT Department\",\n    \"parent_id\": 1,\n    \"flags\": 1\n}"
            },
            "url": {
              "raw": "http://localhost/departments/1",
              "protocol": "http",
              "host": ["localhost"],
              "path": ["departments", "1"]
            }
          }
        },
        {
          "name": "Delete Department",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost/departments/1",
              "protocol": "http",
              "host": ["localhost"],
              "path": ["departments", "1"]
            }
          }
        },
        {
          "name": "Get Direct Descendants",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "http://localhost/departments/1/descendants",
              "protocol": "http",
              "host": ["localhost"],
              "path": ["departments", "1", "descendants"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": ""
    }
  ]
}
